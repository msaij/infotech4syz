{
  "version": "2.0.0",
  "tasks": [
    // python dependencies
    {
      "label": "Install Python Dependencies",
      "type": "shell",
      "command": "cd django-rest && pip install -r requirements.txt",
      "group": "build",
      "problemMatcher": []
    },
    // frontend dependencies
    {
      "label": "Install Frontend Dependencies",
      "type": "shell",
      "command": "cd frontend && npm install",
      "group": "build",
      "problemMatcher": []
    },

    // run backend
    {
      "label": "Run Django Backend",
      "type": "shell",
      "command": "cd django-rest && uvicorn backend.asgi:application --host 127.0.0.1 --port 8000",
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },

    // run frontend
    {
      "label": "Run Next.js Frontend",
      "type": "shell",
      "command": "cd frontend && npm run dev",
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}
